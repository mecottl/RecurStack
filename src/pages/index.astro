---
import '../styles/index.css';
import Layout from "../layouts/LayoutIndex.astro"
import Icons from '../components/Icons.astro';
import Aboutme from '../components/Aboutme.astro';
---

<Layout title='RecurStack'>
<section class="grid grid-2">
    <div class="autoShow">
        <section class="banner">
            <div class="content">
                <h1 class="left">RecurStack</h1>
                <div class="right">
                    <p>Developer website</p>
                    <p>Your go-to hub for web development â€” tools, resources, 
                        <br>and speed in one place.</p>
                </div>
                <div class="image">
                    <img src="../../logo.svg" alt="">
                </div>
            </div>
        </section>
    </div>
        <section class="technologies autoShow">
        <h1>Trending Technologies</h1>
        <ul>
            <li>
                <!-- From Uiverse.io by 0xnihilism --> 
                <div class="button-container">
                <button class="brutalist-button html-btn button-1">
                    <div class="openai-logo">
                        <Icons icon="HTML" />
                    </div>
                    <div class="button-text">
                    <span>HTML</span>
                    </div>
                </button>
                </div>
            </li>
            <li>
                <div class="button-container">
                <button class="brutalist-button css-btn button-1">
                    <div class="openai-logo">
                        <Icons icon="CSS" />
                    </div>
                    <div class="button-text">
                    <span>CSS</span>
                    </div>
                </button>
                </div>
            </li>
            <li>
                <div class="button-container">
                <button class="brutalist-button js-btn button-1">
                    <div class="openai-logo">
                        <Icons icon="Js" />
