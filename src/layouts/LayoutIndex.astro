---
import { ViewTransitions } from "astro:transitions";
import HeaderRecurso from "../components/HeaderRecIndex.astro";
import "../styles/index.css";
interface Props {
	title: string;
}
const { title } = Astro.props;
---

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta
		name="description"
		content={`Recursos útiles para programadores - Categoría: ${title}`}
	/>
	<link rel="icon" type="image/svg+xml" href="/logo.svg" />
	<meta name="generator" content={Astro.generator} />
	<title>{title} | Recursos Dev</title>
	<ViewTransitions />
</head>
<header class="navbar">
	<div class="navleft">
		<img src="/logo.svg" alt="RecurStack Logo" />
	</div>

	<div class="navcenter">
		<div class="recursos">
			<HeaderRecurso href="/Recursos/HTML">HTML</HeaderRecurso>
			<HeaderRecurso href="/Recursos/CSS">CSS</HeaderRecurso>
			<HeaderRecurso href="/Recursos/JS">JS</HeaderRecurso>
			<HeaderRecurso href="/Recursos/SQL">SQL</HeaderRecurso>
			<HeaderRecurso href="/Recursos/GIT">GIT</HeaderRecurso>
			<HeaderRecurso href="/Recursos/Design">Design</HeaderRecurso>
			<HeaderRecurso href="/Recursos/Deploy">Deploy</HeaderRecurso>
			<HeaderRecurso href="/Recursos/Documentation"
				>Documentation</HeaderRecurso
			>
			<HeaderRecurso href="/Recursos/APIS">Apis</HeaderRecurso>
			<HeaderRecurso href="/Recursos/Videos">Videos</HeaderRecurso>
			<HeaderRecurso href="/Recursos/Mas">Comunidad</HeaderRecurso>
		</div>
	</div>
</header>
<main>
	<slot />
</main>
