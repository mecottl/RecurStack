---
import { ViewTransitions } from "astro:transitions";
import HeaderRecurso from "../components/HeaderRecurso.astro";
import Home from "../components/Home.astro";
import "../styles/Layout.css";

interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={`Recursos útiles para programadores - Categoría: ${title}`} />
		<link rel="icon" type="image/svg+xml" href="/logo.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Recursos Dev</title>
		<ViewTransitions />
	</head>
	<body>
		<aside class="nav-container">
			<nav class="nav-btn" aria-label="Navegación principal">
				<Home />
				<div class="divider"></div>
				<HeaderRecurso href="/Recursos/HTML">HTML</HeaderRecurso>
				<HeaderRecurso href="/Recursos/CSS">CSS</HeaderRecurso>
				<HeaderRecurso href="/Recursos/JS">JavaScript</HeaderRecurso>
				<HeaderRecurso href="/Recursos/SQL">SQL</HeaderRecurso>
				<HeaderRecurso href="/Recursos/GIT">GitHub</HeaderRecurso>
				<HeaderRecurso href="/Recursos/Diseño">Diseño</HeaderRecurso>
				<HeaderRecurso href="/Recursos/Deploy">Deploy</HeaderRecurso>
				<HeaderRecurso href="/Recursos/Documentation">Documentation</HeaderRecurso>
				
			</nav>
		</aside>

		<main role="main">		
				<slot />
		</main>
	</body>
</html>
